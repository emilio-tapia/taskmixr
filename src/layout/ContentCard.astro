---
import { Icon } from 'astro-icon';
const {title, smallText, iconName, id} = Astro.props
---

<article id={id}>    
    <div class="info--title-container">
        <small>{smallText}</small>
        <div class="info--title-flex">
            <h5>{title}</h5>
            <Icon name={iconName} />
        </div>
    </div>
    <div class="info--description-container">
        <slot/>
    </div>
</article>

<style lang="scss">

    .info--title-container{
        position: sticky;
        z-index: 35;
        top: 0;
        left: 0;
        background: var(--bg-card-white);
        background: linear-gradient(18deg,#c9c9c9 -63%,transparent 137%);
        background-size: 200%;
        backdrop-filter: blur(13.5914px);
        padding-inline: var(--padding-inline-boundaries);
        padding-block: .5rem;
        
        box-shadow: 0px 3px 37px -8px rgba(0,0,0,0.15);
        // overflow: hidden;

        &::after{
            content: "";
            background: #5a595938;
            width: 98%;
            height: 2%;
            transform: translateX(-50%) translateY(0%);
            position: absolute;
            top: 99%;
            left: 50%;
            z-index: -1;
            box-shadow: 0px 0px 17px 0px rgb(0 0 0 / 93%);
            border-radius: 0 0 50% 50%;
        }

        @media (min-width: 1200px){
        border-radius: 0 0 10px 10px;
        box-shadow:
        0.5px 0px 0px rgba(0,0,0,0.1),
        -0.5px 0px 0px rgba(0,0,0,0.1),
        0px 0.5px 0px rgba(0,0,0,0.1);
        // 0px -0.5px 0px rgba(0,0,0,0.3);
         }  
        }

    .info--title-flex{
        display: flex;
        justify-content: space-between;
        align-items: center;

        [astro-icon] {
        fill: var(--text-color);
        opacity: .6;
        width: 30px;
        height: 100%;
    }
    }

    small{
        color: var(--text-color-90);
        opacity: .6; 
    }


    .info--description-container{
        display: grid;
        padding-inline: var(--padding-inline-boundaries);
        padding-block: 2rem;
    }

</style>